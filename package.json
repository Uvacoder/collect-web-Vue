{
  "name": "awesome-web",
  "private": true,
  "description": "A brand new repository for web development prototypes",
  "scripts": {
    "build": "yarn build:prepare && lerna run build",
    "build:prepare": "rm -fr ./build && mkdir -p ./build",
    "lint": "lerna run lint",
    "release": "lerna version --force-publish --sign-git-commit --sign-git-tag",
    "start": "yarn start:react-renderer",
    "start:react-renderer": "yarn workspace @sabertazimi/react-renderer start",
    "start:vue-basis": "yarn workspace @sabertazimi/vue-basis serve",
    "start:vue-design": "yarn workspace @sabertazimi/vue-design dev",
    "start:vue-trello": "yarn workspace @sabertazimi/vue-trello dev",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/awesome-web.git"
  },
  "keywords": [
    "html",
    "html5",
    "css",
    "css3",
    "js",
    "javascript",
    "ecmascript",
    "react",
    "reactjs",
    "vue",
    "vuejs",
    "node",
    "nodejs",
    "front-end",
    "front-end development",
    "web",
    "web development"
  ],
  "author": "sabertazimi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sabertazimi/awesome-web/issues"
  },
  "homepage": "https://github.com/sabertazimi/awesome-web",
  "packageManager": "yarn@3.6.0",
  "devDependencies": {
    "@dg-scripts/eslint-config": "^5.13.5",
    "@dg-scripts/stylelint-config": "^5.13.5",
    "@types/node": "^18.16.16",
    "eslint": "^8.42.0",
    "lerna": "^6.6.2",
    "pm2": "^5.3.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "workspaces": [
    "./packages/*"
  ]
}
