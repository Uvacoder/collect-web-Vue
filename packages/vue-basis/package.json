{
  "name": "@sabertazimi/vue-basis",
  "version": "1.8.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "vue-tsc --noEmit && vite build && pnpm build:post",
    "build:post": "mkdir -p ../../build/vue-basis && cp -fr ./dist/* ../../build/vue-basis",
    "dev": "vite",
    "lint": "pnpm lint:style && pnpm lint:type-check",
    "lint:style": "eslint ./src && stylelint ./src/**/*.{css,vue}",
    "lint:type-check": "vue-tsc --noEmit",
    "lint:fix": "eslint --fix ./src && stylelint ./src/**/*.{css,vue} --fix",
    "serve": "vite preview"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@dg-scripts/eslint-config": "^5.17.0",
    "@dg-scripts/stylelint-config": "^5.17.0",
    "@types/node": "^20.12.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vue-tsc": "^2.0.7"
  }
}
